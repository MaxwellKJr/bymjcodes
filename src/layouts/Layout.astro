---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import Navbar from "../components/navigation/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col lg:flex-row min-w-screen dark:bg-background-dark bg-background dark:text-white text-black font-sans overflow-x-hidden"
  >
    <Navbar />
    <div
      class="m-10 lg:px-[15vw] w-full lg:w-[85vw] lg:mx-auto overflow-y-auto max-w-screen-lg"
    >
      <slot />
    </div>
    <ViewTransitions />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  ::-webkit-scrollbar {
    background: transparent !important;
    width: 12px !important;
    transition: all 300ms ease-in-out;
  }

  ::-webkit-scrollbar:hover,
  ::-webkit-scrollbar:focus {
    width: 13px !important;
    cursor: pointer;
  }

  ::-webkit-scrollbar-thumb {
    background: #ff0099b7 !important;
    transition: all 300ms ease-in-out;
  }
  ::-webkit-scrollbar-thumb:hover {
    cursor: pointer;
    background: #ff0098ff !important;
  }
</style>
