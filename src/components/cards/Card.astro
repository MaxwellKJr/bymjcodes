---
import type { ImageAsset, PortableTextBlock } from "sanity";
import { Image } from "astro:assets";
import { urlForImage } from "../../sanity/lib/urlForImage";
import Heading from "../typography/Heading.astro";
import Text from "../typography/Text.astro";
import type { Category } from "../../types/Category";
import Pill from "../misc/Pill.astro";
import FormattedDate from "../misc/FormattedDate.astro";

interface Props {
  title: string;
  mainImage: {
    alt: string;
    asset: {
      _ref: string;
    };
  };
  description: string;
  publishedAt: string;
  href: string;
  categories: Category[];
  isProject?: boolean;
  projectUrl?: string;
  githubUrl?: string | null | undefined;
}

const {
  href,
  title,
  mainImage,
  description,
  publishedAt,
  categories,
  isProject = false,
  projectUrl,
  githubUrl,
} = Astro.props;
---

<li
  class="dark:bg-card-dark bg-card-light z-10 rounded-xl hover:scale-95 transition-all duration-300 border-[0.5px] hover:border-primary dark:hover:border-primary dark:border-card-dark border-card-light"
>
  <a
    href={isProject ? `${projectUrl}` : `${href}`}
    target={isProject ? "_blank" : "_self"}
  >
    <Image
      src={urlForImage(mainImage)}
      alt={mainImage.alt}
      width={500}
      height={500}
      loading={"lazy"}
      class={isProject ? "w-full" : "rounded-t-xl w-full shadow-xl"}
      title={title}
    />
    <div class="p-4">
      <Heading text={title} size="md" color="text-primary" />
      <div>
        {
          isProject && (
            <span class="text-xs text-secondary-white">ðŸš€ Deployed on:</span>
          )
        }
        <FormattedDate unformattedDate={publishedAt} />
      </div>
      <hr class="h-[1px] text-primary my-2 opacity-60" />
      <div class="pb-2">
        <Text text={description} size="sm" />
      </div>
      <hr class="h-[1px] text-primary my-2 opacity-60" />
      <ul class="pt-2 flex flex-wrap w-full gap-2">
        {
          categories.map((category: Category) => (
            <Pill text={category.slug.current} variant="secondary" />
          ))
        }
      </ul>
    </div>
  </a>
</li>
