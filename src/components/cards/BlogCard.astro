---
import type { ImageAsset, PortableTextBlock } from "sanity";
import { Image } from "astro:assets";
import { urlForImage } from "../../sanity/lib/urlForImage";
import Heading from "../typography/Heading.astro";

interface Props {
  title: string;
  mainImage: {
    alt: string;
    asset: {
      _ref: string;
    };
  };
  publishedAt: string;
  href: string;
}

const { href, title, mainImage, publishedAt } = Astro.props;
---

<li
  class="dark:bg-[#000000] bg-[#ffffff] z-10 rounded-lg hover:scale-95 transition-all duration-300 border-[1px] hover:border-primary dark:border-[#000000]"
>
  <a href={`${href}`}>
    <Image
      src={urlForImage(mainImage)}
      alt={mainImage.alt}
      width={500}
      height={500}
      loading={"lazy"}
      class={"rounded-t-lg w-full"}
      title={title}
    />
    <div class="p-4">
      <Heading text={title} size="md" color="text-primary" />
      <small class="text-xs text-secondary-white">{publishedAt}</small>
      <hr class="h-[1px] text-primary my-2 opacity-60" />

      <ul>
        {}
      </ul>
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
