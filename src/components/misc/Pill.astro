---
interface Props {
  text: string | undefined;
  variant: "primary" | "secondary" | "tertiary";
}
const { text, variant } = Astro.props;

const variants = {
  primary: "bg-primary text-white",
  secondary: "bg-secondary text-white",
  tertiary: "bg-background-white text-secondary",
};

const completeClass = `
  ${variants[variant]}
  px-4
  py-[1px]
  rounded-full
  mx-1
  font-regular
  text-center
`;
---

<small class={completeClass}>{text}</small>
