>
  <section class="w-full lg:h-[89vh]" transition:animate="fade">
    <div
      class="container mx-auto flex h-full flex-col items-center justify-center py-24"
    >
      <div
        class="flex flex-col items-center gap-4 transition-all duration-400 ease-in-out lg:flex-row lg:gap-7 xl:gap-10"
      >
        <!-- Image -->
        <Image
          src={maxwellImage}
          title="Maxwell Kapezi Jr. ðŸš€"
          alt={"Maxwell Kapezi Jr. ðŸš€"}
          width={250}
          height={250}
          layout="fixed"
          placeholder="blurhash"
          decoding="async"
          loading={"eager"}
          class="flex-1 rounded-full border-2 border-white transition-all duration-400 ease-in-out sm:h-48 sm:w-48 2xl:h-62 2xl:w-62"
        />
        <!-- Background -->
        <div class="flex-1/2 text-center lg:text-left">
          <Heading text="About Me" size="lg" className="2xl:text-4xl" />
          <AboutSectionsToggler client:load />
          <Flex
            direction="row"
            gap="2"
            className="my-4 justify-center lg:justify-start"
          >
            <Button
              text="My Skills"
              link="/about/my-skills"
              variant="primary"
            />
          </Flex>

          <!-- Social Links/Contacts -->
          <div class="block px-2 py-10 text-center lg:hidden">
            <Heading text="Reach Me" size="lg" />
            <div class="py-4">
              <SocialLinks layout="cols-3" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
