---
import { Image } from "@unpic/astro";
import Button from "@/components/buttons/Button.astro";
import SocialLinks from "@/components/contacts/SocialLinks.astro";
import Flex from "@/components/layouts/Flex.astro";
import Heading from "@/components/typography/Heading.astro";
import maxwellImage from "@/images/mjk.jpg";
import Layout from "@/layouts/Layout.astro";
import AboutSectionsToggler from "@/components/navigation/AboutSectionsToggler";
---

<Layout
  title="About Maxwell Kapezi Jr. (MJ Codes)"
  description="Maxwell Kapezi Jr. is a Software Developer, Graphic Designer, and Writer from the Warm Heart of Africa, Malawi ðŸ‡²ðŸ‡¼"
  siteUrl="https://bymjcodes.com/about"
  image="/mjk.jpg"
