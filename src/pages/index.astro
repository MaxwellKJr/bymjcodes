---

<Layout
  title="Programming and Tech Related Content"
  description={websiteDescription}
  siteUrl="https://bymjcodes.com"
  image="/mjk.jpg"
>
  <section class="h-screen lg:h-[80vh]">
    <div class="container flex h-full flex-col justify-center">
      <!-- TODO: Fix the half-baked glitch effect -->
      <div
        class="group hover:text-primary relative hover:cursor-default"
        data-text="The Developing Developer."
      >
        <Heading
          text="The Developing Developer."
          size="xl"
          color="text-secondary"
          className="heading transition-all duration-400 2xl:text-5xl"
        />
      </div>

      <div class="w-1/2 overflow-hidden pb-2">
        <hr class="border-secondary animate-line mt-4 w-full border-t" />
      </div>
      <!-- TODO: Refactor the Flex component to make it more generic to work with simple lists list this -->
      <div class="mx-auto mt-2 flex w-full flex-wrap 2xl:text-lg">
        {
          occupations &&
            occupations.map((occupation: Occupation) => (
              <a
                href={occupation.url}
                class="text-secondary-white hover:text-primary z-10 mr-4 py-1 transition-all duration-500 ease-in-out"
                target="_blank"
              >
                {occupation.name}
              </a>
            ))
        }
      </div>
      <div class="mt-4">
        <Text
          text="A platform to showcase my software development journey and share the few things I know."
          size="md"
          className="2xl:text-xl"
        />
      </div>
      <Flex
        direction="row"
        align="start"
        justify="start"
        gap="4"
        wrap="wrap"
        className="mt-4"
      >
        <Button text="About" link="/about" variant="primary" />
        <Button text="Projects" link="/projects" variant="secondary" />
      </Flex>
    </div>
  </section>
</Layout>
