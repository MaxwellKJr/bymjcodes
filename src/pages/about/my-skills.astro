      href="/about"
      class="bg-background-light/50 dark:bg-background-dark/50 fixed top-0 left-0 z-40 w-full px-4 py-4 shadow-sm backdrop-blur-xl lg:static lg:p-0 lg:shadow-none"
    >
      <div
        class="group hover:text-primary active:text-primary flex items-center gap-2 transition-all duration-400 hover:translate-x-3 hover:opacity-80 active:scale-95 active:opacity-80"
      >
        <Icon
          name={"material-symbols-light:arrow-left-alt-rounded"}
          size={40}
          class="text-primary transition-all duration-400 group-hover:dark:text-white"
        />
        <Heading text="My Skills" size="md" />
      </div>
    </a>
    <div class="split py-4">
      {/*Programming Languages*/}
      <div class="skills">
        <Heading text="Programming Languages" size="sm" />
        <ul class="skills-grid">
          {
            skills.map((skill) => {
              if (skill.skill === 1)
                return (
                  <li class="card-dark">
                    {skill.name} <Icon name={skill.icon} size={iconSize} />
